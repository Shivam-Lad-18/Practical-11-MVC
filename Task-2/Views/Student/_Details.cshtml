@model Task_2.Models.Student

<div>
    <h4>Student Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
        <dd>@Html.DisplayFor(model => model.DateOfBirth)</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>

        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
    </dl>
</div>

<div>
    <button type="button" class="btn btn-primary" id="editStudent" data-id="@Model.Id">Edit</button>
    <button type="button" class="btn btn-secondary" onclick="$('#modalContainer').html('');">Close</button>
</div>

<script>
    $(document).ready(function () {
        $('#editStudent').click(function () {
            var studentId = $(this).data('id');

            $.ajax({
                url: '/Student/Edit/' + studentId,
                type: 'GET',
                success: function (data) {
                    $('#modalContainer').html(data); // Load Edit form in modal
                },
                error: function () {
                    alert("An error occurred while loading the edit form.");
                }
            });
        });
    });
</script>
