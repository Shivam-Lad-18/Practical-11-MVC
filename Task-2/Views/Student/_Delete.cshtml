@model Task_2.Models.Student

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>Student Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
        <dd>@Html.DisplayFor(model => model.DateOfBirth)</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Html.DisplayFor(model => model.Address)</dd>

        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
        <dd>@Html.DisplayFor(model => model.Phone)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
    </dl>

    <div class="form-actions no-color">
        <button type="button" class="btn btn-danger" id="confirmDelete" data-id="@Model.Id">Delete</button>
        <button type="button" class="btn btn-secondary" onclick="$('#modalContainer').html('');">Cancel</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#confirmDelete').click(function () {
            var studentId = $(this).data('id');

            if (confirm("Are you sure you want to delete this student?")) {
                $.ajax({
                    url: '/Student/DeleteConfirmed/' + studentId,
                    type: 'POST',
                    success: function (data) {
                        $('#studentTableBody').html(data); // Refresh student list
                        $('#modalContainer').html(''); // Close the modal
                    },
                    error: function () {
                        alert("An error occurred while deleting the student.");
                    }
                });
            }
        });
    });
</script>
